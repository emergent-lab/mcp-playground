{
  "name": "mcp-playground",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:all": "pnpm run docker:db:up && pnpm run dev",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "format": "biome format --write",
    "typecheck": "tsc --noEmit",
    "docker:db:up": "docker compose -f docker-compose.db.yaml up -d",
    "docker:db:stop": "docker compose -f docker-compose.db.yaml stop",
    "docker:db:down": "docker compose -f docker-compose.db.yaml down",
    "docker:db:clean": "docker compose -f docker-compose.db.yaml down -v",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "auth:generate": "SKIP_ENV_VALIDATION=true pnpm dlx @better-auth/cli generate --output ./src/db/schema/auth.ts",
    "email:dev": "email dev --dir ./emails -p 3333",
    "email:test": "tsx scripts/test-magic-link.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@react-email/components": "0.5.7",
    "@t3-oss/env-core": "^0.13.8",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.5",
    "@trpc/client": "^11.7.0",
    "@trpc/next": "^11.7.0",
    "@trpc/react-query": "^11.7.0",
    "@trpc/server": "^11.7.0",
    "better-auth": "^1.3.32",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv-flow": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.548.0",
    "next": "16.0.0",
    "postgres": "^3.4.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.2.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "drizzle-kit": "^0.31.5",
    "husky": "^9.1.7",
    "react-email": "4.3.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "ultracite": "6.0.1"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
